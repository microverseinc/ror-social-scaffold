<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light  bg-info">
      <%= link_to 'Stay in touch', root_path, class: "nav-link space " %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Timeline', posts_path, class: "nav-link space text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to 'All users', users_path, class: "nav-link space text-white" %>
        </li>
      </ul>
      <% if current_user %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%=link_to current_user.name, user_path(current_user), class: "nav-link space text-white"%>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "nav-link space text-white" %>
        </li>
        
        </ul>
      <% else %>
        <%= link_to 'Sign in', user_session_path %>
      <% end %>
    </nav>


    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>



