<h2>
  New post
</h2>
<%= form_for(@post) do |form| %>
<%= form.label :content %>
<%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
<%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>
<article class="timeline">
<h3>
  Timeline
</h3>
<ul class="posts">
  <% @posts.each do |post| %>
    <li class="post">
      <p class="post-author">
        <%= post.user.name %>
      </p>
      <p class="post-content">
        <%= post.content %>
      </p>
    </li>
  <% end %>
</ul>
</article>
