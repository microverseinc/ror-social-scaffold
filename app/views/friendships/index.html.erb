<p id="notice"><%= notice %></p>

<h1>Friendships</h1>

<table>
  <thead>
    <tr>
      
      <th>Friendship</th>
      
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>

        <% @friendships = Friendship.where(user_id: current_user, status: :accept) %>
      
        <td><%= User.find(friendship.friend_id).name %></td>
        
      </tr>
    <% end %>
   
  </tbody>
</table>
