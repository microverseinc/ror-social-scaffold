<% if !current_user.friend_requests.empty? %>
<% current_user.friend_requests.each do |req| %>
  <li>
    <%= req.name %>
    <%= link_to 'Accept', accept_friend_path(friend_id: req.id), method: :put %>
    <%= link_to 'Reject', decline_request_path(friend_id: req.id), method: :delete %>
  </li>
<% end %>
<% else %>
<p>No Friend Requests Yet</p>
<% end %>