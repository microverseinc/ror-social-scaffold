<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2><br>
  <% if current_user.name == @user.name %>
    <h3>Friend Requests: </h3>
    <ul>
      <% current_user.friend_requests.each do |user| %>
        <li>- <%= user.name %> <li>
      <% end %>
    </ul>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
