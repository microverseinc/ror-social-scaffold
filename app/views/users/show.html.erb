<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <%= button_to 'Invite to friendship', { :controller => "friendships", :action => "create", :friend_id => @user.id  }, method: :post %>
  </article>
  <article class="timeline">
    <h3>Received friend requests</h3>
    <ul class="posts">
      <% @received.each do |received| %>
      <%= received.user.name%>
      <%= link_to 'Accept', edit_friendship_path(received) %>
      <%= link_to 'Deny', destroy_path(received), method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
      <% end%>
    </ul>    
  </article>
  
</section>
