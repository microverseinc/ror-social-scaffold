<section class="user-section">
    <h2>
        <%= "Name: #{@user.name}" %>
    </h2>
    <article class="timeline">
        <h3>Recent posts:</h3>
        <ul class="posts">
            <li>
                <% if current_user.friend_invites(@user) %>
                <button class="btn btn-sm btn-warning"> Pending Invitations </button>
                <% elsif current_user.receive_invitation(@user)%>
                <%= link_to 'Accept', accept_invite_path(user_id: @user), class: "btn btn-sm btn-primary" %>
                <%= link_to 'Decline', reject_invite_path(user_id: @user), method: :delete, class: "btn btn-sm btn-danger" %>
                <% elsif !current_user.friend?(@user) && current_user.id != @user %>
                <%= link_to 'invite to friendship', send_invite_path(user_id: @user) , class: "btn btn-sm btn-success" %>
                <% elsif current_user.friend?(@user) %>
                <%= link_to 'Remove friend', remove_friend_path(user_id: @user), method: :delete, data: {confirm: "Are you sure you want to remove friend?"}, class: "btn btn-sm btn-danger" %>
                <% end %>
            <li>
                <%= pluralize(@user.comments.count,"comments")%>
            </li>
            <li>
                <%= pluralize(@user.likes.count,"likes")%>
            </li>
            <%= render @posts %>
        </ul>
    </article>
</section>