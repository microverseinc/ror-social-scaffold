<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <button type="button" name="button"> <%= link_to 'Add friend', new_user_friendship_path(user_id: current_user, friend_id: @user.id), class: 'add_friend'  %></button>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
