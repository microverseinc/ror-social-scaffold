<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li class="card container p-3 shadow">
         <h5 class="card-title"><%= user.name %></h5>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: "btn  btn-sm btn-secondary" %>
           <%= render_friendships(user) %>
        </span>
      </li>
    <% end %>
  </ul>
  <h3>Pending invitations</h3>
  <% @pending_invitations.uniq.each do |invitation| %>
  <ul>
  <li>Name: <%= invitation.name.capitalize%></li>
  </ul>
  <% end %>
</section>