<section class="users-section">
Logged in user:<%= current_user.name %>
<h2>Other Users</h2>
  <ul class="users-list">
    <%= render @user_list %>
  </ul>
</section>

<section class="users-section">
  <h2>Pending Friends</h2>
  <ul class="users-list"> 
    <% if !current_user.pending_friends.empty? %>
      <% current_user.pending_friends.each do |pend| %>
        <li>
          <%= pend.name %>
        </li>
      <% end %>
    <% else %>
      <p>No pending Friends Yet</p>
    <% end %>
  </ul>
</section>

<section class="users-section">
  <h2>Friend Requests</h2>
  <ul class="users-list"> 
    <% if !current_user.friend_requests.empty? %>
      <% current_user.friend_requests.each do |req| %>
        <li>
          <%= req.name %>
          <%= link_to 'Accept', accept_friend_path(friend_id: req.id), method: :put %>
        </li>
      <% end %>
    <% else %>
      <p>No Friend Requests Yet</p>
    <% end %>
  </ul>
</section>
