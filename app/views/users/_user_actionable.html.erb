<% if current_user.friend_request_pending_from?(user) %>
  <%= form_with url: user_friendships_path(user), method: :patch do |form| %>
    <%= form.submit 'Accept request' %>
  <% end %>
  <%= form_with url: user_friendships_path(user), method: :delete do |form| %>
    <%= form.submit 'Reject request' %>
  <% end %>
<% end %>

<% if current_user.friend_request_pending_to?(user) %>
  <%= form_with url: user_friendships_path(user), method: :delete do |form| %>
    <%= form.submit 'Cancel request' %>
  <% end %>
<% end %>

<% if current_user.friend?(user) %>
  <%= form_with url: user_friendships_path(user), method: :delete do |form| %>
    <%= form.submit 'Remove friend' %>
  <% end %>
<% end %>

<% if current_user.no_relation?(user) && current_user != user %>
  <%= form_with url: user_friendships_path(user) do |form| %>
    <%= form.submit 'Invite to friendship' %>
  <% end %>
<% end %>
