<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
  </span>
  <span class="profile-link">
    <%= link_to 'Add Friend',  user_path(user), class: 'profile-link' %>
  </span>
  <% if friend? %>
    <span class="profile-link">
      <%= link_to 'Remove Friend',  user_path(user), class: 'profile-link' %>
    </span>
  <% end %>
</li>