<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
  </span>
  <span class="profile-link">
    <%= link_to 'Add Friend',  friendships_path(received_friendship_id: user), method: :post, class: 'profile-link' %>
  </span>
  <% if friend? %>
    <span class="profile-link">
      <%= link_to 'Remove Friend',  user_path(user), class: 'profile-link' %>
    </span>
  <% end %>
</li>